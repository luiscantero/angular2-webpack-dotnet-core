{
  "name": "angular2_webpack",
  "version": "1.0.0",
  "description": "Angular 2 test using webpack",
  "scripts": {
    "build:dev": "rimraf wwwroot && webpack --config config/webpack.dev.js --progress --profile && copyfiles mock-authors.json wwwroot",
