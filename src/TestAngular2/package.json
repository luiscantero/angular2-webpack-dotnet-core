    "@angular/http": "~4.3.0",
    "@angular/platform-browser": "~4.3.0",
    "@angular/platform-browser-dynamic": "~4.3.0",
    "@angular/router": "~4.3.0",

    "core-js": "^2.4.1",
    "rxjs": "5.4.2",
    "zone.js": "^0.8.14",

    "angular-in-memory-web-api": "~0.3.2",
    "bootstrap": "^3.3.7",
    "jquery": "^3.2.1"
  },
